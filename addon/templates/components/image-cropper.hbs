<img
  {{did-insert this.initCrop}}
  class='max-w-full'
  src={{this.source}}
  alt={{this.alt}}>

{{#if this.ccropper}}
  {{yield
    (hash
      cropper=this.ccropper
      call=(component 'image-cropper-call' obj=this.ccropper)
      on=(component 'image-cropper-on' cropper=this.ccropper eventSource=this.ccropper.element)
    )
  }}
{{/if}}
